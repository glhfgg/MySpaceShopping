<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">




    <ListView
        android:id="@+id/ju_comment_list"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        />

    <LinearLayout
        android:id="@+id/ju_comment_linear"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="3"
        android:visibility="gone"
        >

            <TextView
                android:id="@+id/ju_forwarding2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="转发"
                android:clickable="true"
                android:drawableLeft="@mipmap/fenxiang"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:background="@drawable/ju_pinlun"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                />
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="1dp"
                android:background="@color/gray"
                />

            <TextView
                android:id="@+id/ju_comments2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="评论"
                android:clickable="true"
                android:drawableLeft="@mipmap/pinglun2"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:background="@drawable/ju_pinlun"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                />
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="1dp"
                android:background="@color/gray"
                />
            <TextView
                android:id="@+id/ju_clickpraise2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="点赞0"
                android:clickable="true"
                android:drawableLeft="@mipmap/zan2"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:background="@drawable/ju_pinlun"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                />

        </LinearLayout>

</RelativeLayout>
