<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/movie_list_title"
        android:textSize="14sp"
        android:textStyle="bold"
        android:text="麦当劳"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/movie_list_score"
        android:layout_marginTop="8dp"
        android:textSize="12sp"
        android:textColor="#FF6600"
        android:layout_below="@id/movie_list_title"
        android:text="5.5"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/movie_list_price"
        android:layout_below="@id/movie_list_score"
        android:layout_marginTop="10dp"
        android:textSize="14sp"
        android:textColor="#66ffeb"
        android:text="￥ 14.9起"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/movie_list_distance"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/movie_list_price"
        android:textSize="14sp"
        android:textColor="#BFBFBF"
        android:text="1600KM"/>


</RelativeLayout>