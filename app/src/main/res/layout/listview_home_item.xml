<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/list_image"
        android:layout_width="130dp"
        android:layout_height="90dp"
        android:scaleType="fitXY"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:id="@+id/list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/list_image"
        android:layout_toRightOf="@id/list_image"
        android:layout_marginLeft="8dp"
        android:gravity="center"
        android:textStyle="bold"
        android:text="麦当劳"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/list_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="3dp"
        android:layout_below="@id/list_title"
        android:layout_toRightOf="@id/list_image"
        android:text="麦辣鸡腿堡+麦旋风！"
        android:textSize="12sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_current_price"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/list_image"
        android:layout_alignBottom="@id/list_image"
        android:textSize="16sp"
        android:textColor="#FF69B4"
        android:text="￥ 79"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_market_price"
        android:layout_toRightOf="@id/list_current_price"
        android:layout_alignBottom="@id/list_image"
        android:layout_marginLeft="2dp"
        android:textSize="12sp"
        android:text="100"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_score"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/list_image"
        android:layout_marginRight="10dp"
        android:textColor="#BDB76B"
        android:textSize="14sp"
        android:text="4.5"/>

</RelativeLayout>